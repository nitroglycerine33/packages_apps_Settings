<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/system_interface_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
            android:key="systemui_category"
            android:title="User Interface Settings">
    <PreferenceScreen
        android:key="general_ui"
	android:icon="@drawable/ic_eclipse_general"
        android:fragment="com.android.settings.GeneralUI"
        android:title="@string/general_ui" />

    <PreferenceScreen
        android:key="status_bar"
	android:icon="@drawable/ic_eclipse_systemui"
        android:fragment="com.android.settings.cyanogenmod.StatusBar"
        android:title="@string/combined_status_bar_title" />

    <PreferenceScreen
        android:key="notification_drawer"
	android:icon="@drawable/ic_eclipse_widget"
        android:fragment="com.android.settings.cyanogenmod.PowerWidget"
        android:title="@string/notification_drawer_title" />
	
    <PreferenceScreen
	android:key="@+id/navbar"
	android:icon="@drawable/ic_eclipse_navbar"
	android:title="@string/navigation_bar_title"
	android:fragment="com.android.settings.eclipse.fragments.Navbar" />

    </PreferenceCategory>

    <PreferenceCategory
            android:key="lockscreen_category"
            android:title="Lockscreen Settings">
    <PreferenceScreen
        android:id="@+id/lock_screen_settings"
	android:icon="@drawable/ic_eclipse_lockscreen"
        android:fragment="com.android.settings.LockscreenSettings"
        android:title="@string/lock_screen_title" />

     <Preference
        android:fragment="com.android.settings.cyanogenmod.LockscreenTargets"
        android:key="lockscreen_targets"
	android:icon="@drawable/ic_settings_lockscreen"
        android:title="@string/lockscreen_target_title" />

    </PreferenceCategory>

</PreferenceScreen>

