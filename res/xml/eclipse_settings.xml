<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/eclipse_settings_title"
    android:key="eclipse_settings"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceScreen
            android:key="general_settings"
	    android:icon="@drawable/ic_eclipse_general"
            android:title="@string/general_settings"
            android:fragment="com.android.settings.GeneralSettings" />

    <PreferenceScreen
        android:key="themes_settings"
        android:icon="@drawable/ic_settings_themes"
        android:title="@string/themes_settings_title">
        <intent
            android:action="android.intent.action.MAIN"
            android:targetPackage="com.tmobile.themechooser"
            android:targetClass="com.tmobile.themechooser.ThemeChooser" />
    </PreferenceScreen>

    <PreferenceScreen
            android:key="color_settings"
	    android:icon="@drawable/ic_eclipse_colors"
            android:title="@string/color_prefs_title"
            android:fragment="com.android.settings.ColorControlSettings" />

    <Preference android:key="lockscreen_targets"
	    android:icon="@drawable/ic_eclipse_lockscreen"
            android:title="@string/lockscreen_target_title"
            android:fragment="com.android.settings.cyanogenmod.LockscreenTargets" />

    <PreferenceScreen
            android:key="power_widgets"
	    android:icon="@drawable/ic_eclipse_widget"
            android:title="@string/power_widgets"
            android:fragment="com.android.settings.cyanogenmod.PowerWidget" />

    <PreferenceScreen
        android:key="navigation_bar"
	android:icon="@drawable/ic_eclipse_navbar"
        android:fragment="com.android.settings.cyanogenmod.NavBar"
        android:title="@string/navigation_bar_title" />

    <PreferenceScreen
            android:key="systemui_settings"
	    android:icon="@drawable/ic_eclipse_systemui"
            android:title="@string/systemui_prefs_title"
            android:fragment="com.android.settings.SystemUISettings" />

    <PreferenceScreen
            android:key="quiet_hours"
	    android:icon="@drawable/ic_eclipse_quiet"
            android:title="@string/quiet_hours_title"
	    android:fragment="com.android.settings.cyanogenmod.QuietHours" />

</PreferenceScreen>
