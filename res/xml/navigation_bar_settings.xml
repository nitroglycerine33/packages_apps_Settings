<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/navigation_bar_prefs_title"
    android:key="navigation_bar_prefs">

    <PreferenceCategory
	android:key="nav_settings"
	android:title="Softkey Settings">

	<CheckBoxPreference
	    android:key="long_press_homekey"
	    android:title="@string/long_press_home_title"
	    android:summary="@string/long_press_home_summary">
	</CheckBoxPreference>

        <CheckBoxPreference
            android:key="show_menu_button"
            android:title="@string/show_menu_button_title" >
        </CheckBoxPreference>

        <CheckBoxPreference
            android:key="show_search_button"
            android:title="@string/show_search_button_title" >
        </CheckBoxPreference>

	<CheckBoxPreference
	    android:key="kill_app_longpress_back"
	    android:title="@string/kill_app_longpress_back"
	    android:summary="@string/kill_app_longpress_back_summary"/>

	<com.android.settings.util.colorpicker.ColorPickerPreference
	    android:key="softkey_color" 
	    android:title="@string/softkey_color" 
	    android:defaultValue="#aeaeae" />

    </PreferenceCategory>

</PreferenceScreen>
